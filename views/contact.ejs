    <div class="gtco-section" id="gtco-contact">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-6 animate-box">
                    <h3>Get In Touch</h3>
                    <% include ./partials/messages %>
                    <form action="/contact" method="POST">
                        <div class="row form-group">
                            <div class="col-md-6">
                                <label for="fname">Krstné meno*</label>
                                <input type="text" id="fname" class="form-control" name="contactFirstName"
                                    placeholder="Tvoje krstné meno" required
                                    pattern="^(?:[A-zÀ-ú]+)(?:[A-Za-z\u0100-\u017Fáéíýóúô]*)$">
                            </div>
                            <div class="col-md-6">
                                <label for="lname">Priezvisko*</label>
                                <input type="text" id="lname" class="form-control" name="contactLastName"
                                    placeholder="Tvoje Priezvisko" required
                                    pattern="^(?:[A-zÀ-ú]+)(?:[A-Za-z\u0100-\u017Fáéíýóúô]*)$">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="email">Email*</label>
                                <input type="text" id="email" class="form-control" name="contactEmail"
                                    placeholder="Tvoja emailová adresa" required
                                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="subject">Predmet*</label>
                                <input type="text" id="subject" class="form-control" placeholder="Tvoj predmet správi"
                                    name="contactSubject" required
                                    pattern="^(?:[A-zÀ-ú]+)(?:[A-Za-z0-9\u0100-\u017F .,:?!áéíýóúô]*)$">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label for="message">Správa*</label>
                                <textarea name="message" id="message" cols="30" rows="10" class="form-control"
                                    placeholder="Napíš nám niečo" name="contactMsg"
                                    required><%= typeof contactMsg != 'undefined' ? contactMsg : '' %></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Poslať správu" class="btn btn-primary contact-form-button">
                        </div>

                    </form>
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3> • MUVschool • Banská Bystrica </h3>
